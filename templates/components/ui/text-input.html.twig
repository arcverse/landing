{% if not area %}
    <div>
        <div class="flex items-center justify-between">
            <label for="{{ id }}"
                   class="block text-sm font-medium leading-6 text-slate-400">{{ label }}</label>
        </div>
        <div class="mt-2">
            <input id="{{ id }}" name="{{ id }}" type="{{ type }}" {{ attr }}
                   class="block w-full rounded-md border-0 px-2 py-1.5 text-slate-400 bg-slate-950 shadow-sm ring-1 ring-inset ring-slate-800 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
    </div>
{% else %}
    <div>
        <div class="flex items-center justify-between">
            <label for="{{ id }}"
                   class="block text-sm font-medium leading-6 text-slate-400">{{ label }}</label>
        </div>
        <div class="mt-2">
            <textarea id="{{ id }}" name="{{ id }}"
                      type="{{ type }}" {{ attr }} class="block w-full rounded-md border-0 px-2 py-1.5 text-slate-400 bg-slate-950 shadow-sm ring-1 ring-inset ring-slate-800 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
        </div>
    </div>
{% endif %}
