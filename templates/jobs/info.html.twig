{% extends 'page.html.twig' %}

{% block title %}ü™ê arcverse ü™ê Jobs{% endblock %}

{% block content %}
    <div class="py-1 shadow overflow-hidden rounded-md">
        <h1 class="font-bold text-slate-400 text-3xl" style="color: {{ job.color }}">
            Apply for {{ job.name }}
        </h1>
        <br>
        <p class="text-slate-400 text-md">
            {{ job.description }}
        </p>
        <br>
        <br>
        <div class="flex flex-col lg:flex-row gap-x-16 justify-center gap-y-4">
            <div class="pl-1 text-slate-300 html-styled w-full lg:hidden">
                {{ job.info ? job.info|sanitize_html : 'No info provided.' }}
            </div>
            {{ include('jobs/form.html.twig') }}
            <div class="text-slate-300 html-styled w-full hidden lg:block">
                {{ job.info ? job.info|sanitize_html : 'No info provided.' }}
            </div>
        </div>
    </div>
{% endblock %}
