<form class="pl-1 w-full" action="{{ path('app_jobs_info', {
    job: job.id
}) }}" method="POST">
    <div class="flex flex-col gap-y-4">
        <div>
            <label for="name" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Name</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required="" type="text" name="name" id="name"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="discord_name" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Discord Name</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required type="text" name="discord_name" id="discord_name"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="email" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">E-Mail</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required type="email" name="email" id="email"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="age" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Age</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required type="number" min="16" max="99" name="age" id="age"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="strengths" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Your strengths</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <textarea required type="text" name="strengths" id="strengths"
                          class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 h-28 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700"></textarea>
            </div>
        </div>


        <div>
            <label for="weaknesses" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Your weaknesses</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <textarea required type="text" name="weaknesses" id="weaknesses"
                          class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 h-28 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700"></textarea>
            </div>
        </div>

        <div>
            <label for="online_time" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Your online times</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required type="text" name="online_time" id="online_time"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="minecraft_experience" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Your minecraft experience</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <textarea required type="text" name="minecraft_experience" id="minecraft_experience"
                          class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 h-28 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700"></textarea>
            </div>
        </div>

        <div>
            <label for="origin" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">How did you find us?</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input required type="text" name="origin" id="origin"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700">
            </div>
        </div>

        <div>
            <label for="about" class="block text-md font-black text-orange-600"
                   style="color: #3a4cd8">Tell us about you and what you do</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <textarea required type="text" name="about" id="about"
                          class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full py-2 px-1 h-28 min-w-0 rounded-md sm:text-sm border-gray-100 bg-gray-700"></textarea>
            </div>
        </div>
    </div>

    <div class="pt-8">
        <div>
            <h3 class="text-lg leading-6 font-medium text-gray-100">Privacy</h3>
            <p class="mt-1 text-sm text-gray-100">
                You have to agree to our privacy policy to submit your application.
            </p>
        </div>
        <div class="mt-4 space-y-4">
            <div class="relative flex items-start">
                <div class="flex items-center h-5">
                    <input required="" id="privacy" name="privacy" type="checkbox"
                           class="focus:ring-indigo-500 h-4 w-4 bg-gray-700 text-indigo-600 border-gray-300 rounded hover:cursor-pointer">
                </div>
                <div class="ml-3 text-sm">
                    <label for="privacy" class="font-medium text-gray-100 hover:cursor-pointer">
                        I have read and agree to the {{ include('components/ui/link.html.twig', {
                            label: "Privacy Policy",
                            href: path('app_privacy'),
                            blank: true
                        }) }}, and I agree that my data will be stored for the purpose of processing my application.
                    </label>
                </div>
            </div>
        </div>
        <div class="mt-6">
            {{ include('components/ui/button.html.twig', {
                label: 'Submit application',
                variant: 'submit',
                icon: 'fa-solid fa-rocket',
                class: ''
            }) }}
        </div>
    </div>
</form>
